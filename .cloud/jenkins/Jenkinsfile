pipeline {
    agent { label 'codeclarity' }

    options {
        timeout(time: 30, unit: 'MINUTES')
        timestamps()
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    environment {
        GOPRIVATE = 'github.com/CodeClarityCE/*'
    }

    stages {
        stage('Setup') {
            steps {
                sh 'go version'
                sh 'git submodule update --init --recursive'
            }
        }

        stage('Dependencies') {
            steps {
                sh 'go mod download'
                sh 'go mod tidy'
            }
        }

        stage('Lint') {
            steps {
                sh 'go fmt ./...'
                sh 'go vet ./...'
            }
        }

        stage('Test') {
            steps {
                sh 'go test -v ./...'
            }
        }

        stage('Build') {
            steps {
                sh 'go build -o bin/codeclarity .'
                echo "Build successful"
            }
        }
    }

    post {
        failure {
            echo "Build failed for CodeClarity CLI"
        }
    }
}
